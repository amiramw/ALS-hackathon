<sap.ui.core.mvc:View controllerName="view.weeklyTasks"
                      xmlns="sap.m"
                      xmlns:sap.ui.layout="sap.ui.layout"
                      xmlns:sap.ui.layout.form="sap.ui.layout.form"
                      xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.core.mvc="sap.ui.core.mvc" >
    <Page showHeader="false" enableScrolling="false">
        <content>
            <!-- The header-->
            <sap.ui.core:Fragment fragmentName="HeaderToolbar" type="JS"/>
            <!-- The Title label-->
            <Label text="Weekly Tasks" width="100%" class="subtitle"/>
            <!-- The List: The items in the list are bounded to the modelData defined in the controller-->
            <List items="{/modelData}">
                <!-- first row-->
                <CustomListItem type="Active" press="onPress">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                   <Label text="{taskName}"  class="task"/>
                   <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"
                            text="ddd"/>
                </CustomListItem>
                <!-- second row-->
                <CustomListItem type="Active" press="onPress">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}"  textAlign="End" class="dateStatus" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- third row-->
                <CustomListItem type="Active" press="onPress">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- forth row-->
                <CustomListItem type="Active" press="onPress">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}"  textAlign="End" class="dateStatus" />
                     <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- fifth row-->
                <CustomListItem type="Active" press="onPress">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                     <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
            </List>
        </content>
    </Page>
</sap.ui.core.mvc:View>