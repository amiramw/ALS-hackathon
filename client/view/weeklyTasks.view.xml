<sap.ui.core.mvc:View controllerName="view.weeklyTasks"
                      xmlns="sap.m"
                      xmlns:sap.ui.layout="sap.ui.layout"
                      xmlns:sap.ui.layout.form="sap.ui.layout.form"
                      xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.core.mvc="sap.ui.core.mvc" >
    <Page>
        <content>
            <!-- The Title label-->
            <Label text="Weekly Tasks" textAlign="Center" width="100%" class="subtitle"/>
            <!-- The List: The items in the list are bounded to the modelData defined in the controller-->
            <List items="{/modelData}">
                <!-- first row-->
                <CustomListItem type="Navigation">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                   <Label text="{taskName}"  class="task"/>
                   <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                   <Label text="{date}"   class="date" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- second row-->
                <CustomListItem type="Navigation">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}"  textAlign="End" class="dateStatus" />
                    <Label text="{date}"   class="date" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- third row-->
                <CustomListItem type="Navigation">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                    <Label text="{date}"   class="date" />
                    <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- forth row-->
                <CustomListItem type="Navigation">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}"  textAlign="End" class="dateStatus" />
                    <Label text="{date}"   class="date" />
                     <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
                <!-- fifth row-->
                <CustomListItem type="Navigation">
                    <sap.ui.core:Icon
                            src="{iconTaskSource}"
                            size="1.5em"
                            class="taskIcon"/>
                    <Label text="{taskName}"  class="task"/>
                    <Label text="{dateStatus}" textAlign="End"  class="dateStatus" />
                    <Label text="{date}"   class="date" />
                     <sap.ui.core:Icon
                            src="{iconStatusSource}"
                            size="0.8em"
                            class="statusIcon"/>
                </CustomListItem>
            </List>
        </content>
        <!-- The header including the icon and text-->
        <customHeader>
            <Toolbar>
                <content>
                    <ToolbarSpacer></ToolbarSpacer>
                    <sap.ui.core:Icon
                            src="sap-icon://e-care"
                            size="2em"/>
                    <Label text="My HealthCare"></Label>
                    <ToolbarSpacer></ToolbarSpacer>
                </content>
            </Toolbar>
        </customHeader>
    </Page>
</sap.ui.core.mvc:View>